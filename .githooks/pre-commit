#!/usr/bin/env zsh
# vim: filetype=sh
#───────────────────────────────────────────────────────────────────────────────

# block if there are any issues reported by biome
echo
print "\033[1;34mPre-Commit Hook: Biome\033[0m"
biome check --log-kind="compact" "$(git rev-parse --show-toplevel)" || exit 1
echo
